.image-gallery {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 50px 0;

  .img-wrapper {
    flex: 1 1 100%;
    width: 100%;
    padding: 0 0 20px;

    +min-screen($media-small) {
      flex: 1 1 50%;
      width: 50%;
      padding: 10px;

      &:nth-of-type(odd) {
        padding-left: 0;
      }

      &:nth-of-type(even) {
        padding-right: 0;
      }
    }

    +min-screen($media-large) {
      flex: 1 1 33%;
      width: 33%;

      &:nth-child(3n+1) {
        padding-right: rem(20);
        padding-left: 0;
      }

      &:nth-child(3n+2) {
        padding-left: rem(10);
        padding-right: rem(10);
      }

      &:nth-child(3n+3) {
        padding-right: 0;
        padding-left: rem(20);
      }
    }

    .img {
      width: 100%;
    }
  }
}
