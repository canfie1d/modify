.hero {
  position: relative;
  height: 100vh;
  width: 100%;
  
  .hero__image-wrapper {
    position: relative;
    height: inherit;
    width: inherit;
    filter: grayscale(60%);
    overflow: hidden;
  }

  .hero__image {
    background-size: cover;
    width: 100%;
    min-height: 100vh;
  }

  &.hero--short {
    height: 60vh;

    .hero__image {
      min-height: 60vh;
    }
  }

  .hero__title {
    position: absolute;
    top: 50%;
    left: 0;
    padding-left: 5%;
    transform: translateY(-50%);
    font-family: Helvetica;
    font-size: 15vw;
    color: $white;
    text-shadow: 0 0 32px rgba($black, 1);
    font-weight: 800;
    opacity: .8;
  }

  .hero__content {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    width: 45%;
    height: inherit;
    background: rgba($black, .4);
    padding: rem(20);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
  }

}