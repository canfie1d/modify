.hero {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  .hero__image-wrapper {
    position: relative;
    height: 100vh;
    width: 100%;
    filter: grayscale(60%);
    overflow: hidden;
  }

  .hero__image {
    position: absolute;
    top: -150px;
    left: 0;
    min-height: 100vh;
    min-width: 100%;

    +min-screen($media-medium) {
      top: 0;
    }
  }

  &.hero--short {
    height: 60vh;

    .hero__image {
      min-height: 60vh;
    }
  }
}
