.hero {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  .hero__image-wrapper {
    position: relative;
    height: 100vh;
    width: 100%;
    filter: grayscale(60%);
    overflow: hidden;
  }

  .hero__image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    min-height: 100vh;
  }

  &.hero--short {
    height: 60vh;

    .hero__image {
      min-height: 60vh;
    }
  }
}
