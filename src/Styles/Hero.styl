.hero {
  position: relative;
  height: 100vh;
  width: 100%;

  &.hero--short {
    height: 60vh;
  }
  
  .hero__image {
    height: inherit;
    width: inherit;
    background-image: url('./Assets/Images/hero2.jpg');
    filter: grayscale(60%);
    background-size: cover;
  }

  .hero__title {
    position: absolute;
    top: 50%;
    left: 0;
    padding-left: 10%;
    transform: translateY(-50%);
    font-family: Helvetica;
    font-size: 15vw;
    color: $white;
    text-shadow: 0 0 32px rgba($black, 1);
    font-weight: 800;
  }

  .hero__content {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    width: 45%;
    height: inherit;
    background: rgba($black, .4);
    padding: rem(20);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
  }

}