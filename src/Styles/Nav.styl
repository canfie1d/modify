nav {
  height: 50px;
  background: $white;

  &.nav--fixed {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
  }

  ul {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 50px;
  }

  .nav__item {
    display: inline;
    margin-left: 0;

    &.nav__item__logo {
      margin-left: 0;

      a {
        padding: 0;
      }
    }
  }

  a {
    display: block;
    color: $black;
    font-family: $clarendon;
    font-size: 17px;
    // text-transform: uppercase;
    text-decoration: none;
    padding: 18px 5px;
    height: 50px;
    transition: background 100ms ease-out,
                color 100ms ease-out;

    &:hover {
      outline: 1px solid rgba($black, .5);
    }

    &.current {
      background: $black;
      color: $white;
    }
  }

  .nav__image {
    width : 50px;
    height: 50px;
    padding: 0;
  }
}


.nav__placeholder {
  height: 0;
  
  &.nav__placeholder--active {
     height: 50px;
  }
}

+min-screen($media-small) {
  nav {
    a {
      padding: 18px 15px;
    }

    .nav__item {
      margin-left: 20px;
    }
  }
}
+min-screen($media-medium) {
  nav {
    height: 100px;
    ul,
    a {
      height: 100px;
    }

    .nav__item {
      margin-left: 40px;
    }

    a {
      font-size: 20px;
      padding: 40px 30px;
      height: 100px;
      user-select: none;
    }
  
    .nav__image {
      height: 100px;
      width: 100px;
    }
  
  }

  .nav__placeholder.nav__placeholder--active {
    height: 100px;
  }

}
