html {
  font-size: $rem-base;
}

html,
body {
  width: 100%;
  min-height: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

* {
  box-sizing: border-box;

  &:before,
  &:after {
    box-sizing: inherit;
  }
}

.p {
  font-family: Helvetica;
  font-size: 20px;
  color: $white;
  line-height: 1.75;
  margin-bottom: 18px;
  max-width: 700px;

  &.p--dark {
    color: $gray--900;
  }
}

.m-b-100 {
  margin-bottom: 50px;
}

.max-width {
  max-width: 1024px;
  margin: auto;
}

a {
  &:focus {
    outline: 1px solid rgba($black, .5);
  }
}
