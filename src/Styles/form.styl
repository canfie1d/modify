.form {
  margin: auto;
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 24px;
  font-family: $display-font;
  display: block;
  padding: 0 0 12px 12px;
}

.input {
  display: block;
  padding: 0 20px;
  height: 50px;
  margin-bottom: 24px;
  font-size: 24px;
  border-radius: 25px;
  border: 1px solid $black;

  &:focus {
    border: 1px solid $black;
  }
}

.textarea {
  font-size: 24px;
  border-radius: 25px;
}
