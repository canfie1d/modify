$imageWidth= 280px;

.profile {
  display: flex;
  flex-wrap: wrap;
  width: 100%;

  +min-screen($media-medium) {
    flex-wrap: wrap;
  }

  &.profile--column {
    flex-direction: column;
    align-items: center;
  }
}

.profile__column {
  flex: 1 1 100%;

  &:nth-of-type(1) {
    flex: 1 0 100%;
  }

  &:nth-of-type(3) {
    padding-top: 50px;
  }

  +min-screen($media-medium) {
    &:nth-of-type(2) {
      flex: 0 1 $imageWidth;
      padding-right: 50px;
    }

    &:nth-of-type(3) {
      flex: 0 1 "calc(100% - %s - 50px)" % $imageWidth;
      padding-top: 0;
    }
  }

}

.profile__name,
.profile__position {
  align-self: flex-start;
  font-family: $display-font;
  font-size: 26px;
  color: $black;
  padding: 10px 0;
}

.profile__position {
  color: $secondary;
  font-size: 18px;
  padding-bottom: 20px;
}

.profile__link {
  white-space: nowrap;
}

.profile__image {
  width: 100%;
  max-width: $imageWidth;

  &.profile__image--wide {
    max-width: "calc(%s * 2)" % $imageWidth;
  }
}

.profile__data {
  max-width: $imageWidth * 2;
  margin: auto;
}

+max-screen($media-medium) {
  .profile__image {
    display: block;
    margin: 0 auto 50px;
  }

  .profile__name,
  .profile__position {
    display: block;
    margin: auto;
    width: $imageWidth;
  }
}

.profile__button {
  position: absolute;
  top: 110px;
  left: 20px;
}
