.button {
  padding: 10px 20px;
  font-size: 24px;
  font-family: Helvetica;
  box-shadow: 0;
  border: 1px solid $gray--100;
  background: $white;
  color: $gray--900;
  border-radius: 24px;

  .button__nav-link {
    text-decoration: none;
    color: $gray--900;
  }

  &.button--dark {
    background: $gray--900;
    color: $white;
    
    .button__nav-link {
      color: $white;
    }
  }
}