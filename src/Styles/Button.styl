.button {
  display: inline-block;
  padding: 10px 20px;
  font-size: 24px;
  font-family: Helvetica;
  box-shadow: none;
  border: 1px solid $black;
  background: $white;
  color: $gray--900;
  border-radius: 25px;
  color: $gray--900;
  text-decoration: none;
  user-select: none;

  &:focus {
    outline: none;
    border: 1px solid $primary;
  }

  &.button--alt {
    background: $primary;
    color: $white;
    border: 1px solid transparent;

    &:focus {
      outline: none;
      border: 1px solid $black;
    }
  }

}

.nav-link__button {
  @extend .button;

  &.nav-link__button--alt {
    @extend .button.button--alt;
  }
}
