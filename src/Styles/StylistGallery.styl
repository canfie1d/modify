.stylist-gallery {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-wrap: wrap;

  &::after {
    content: "";
    flex: auto;
  }
}

.stylist-wrapper {
  flex: 1 1 100%;
  max-width: 100%;

  +min-screen($media-small) {
    flex: 1 1 50%;
    max-width: 50%;
  }

  +min-screen($media-medium) {
    flex: 1 1 33%;
    max-width: 33%;
  }

  .stylist {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    margin: 0 20px 50px;

    .stylist__img-wrapper {
      width: 100%;
      height: 0;
      overflow: hidden;
      padding-bottom: 100%;
      background: $off-white;

      .stylist__img {
        flex: 1 1 100%;
        width: 100%;
        filter: grayscale(60%);
        transition: filter 300ms ease;
      }
    }

    .stylist__info {
      flex: 1 1 100%;
      width: 100%;
      padding: 20px 5px;
      display: flex;
      align-items: center;
      justify-content: space-between;

      .stylist__info--name,
      .stylist__info--position {
        color: $black;
        font-family: $display-font;
        font-size: 20px;
      }

      .stylist__info--position {
        text-align: right;
        color: $secondary;
        font-size: 16px;
      }
    }

    &:hover,
    &:focus {
      .stylist__img {
        filter: grayscale(10%);
      }
    }
  }

}
