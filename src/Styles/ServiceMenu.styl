.service__list {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  flex-wrap: wrap;
}

.service__item {
  flex: 1 0 100%;
  padding: 50px 0;

  &:nth-of-type(1) {
    padding-top: 0;
  }

  +min-screen($media-medium) {
    flex: 1 0 50%;

    &:nth-of-type(2) {
      padding-top: 0;
    }
  }

  span {
    display: block;
    font-size: 20px;
    font-family: $display-font;

    +min-screen(56em) {
      padding-left: 25%;
    }

    &:last-of-type {
      padding-top: 5px;
      text-align: left;
      font-size: 16px;
      color: $secondary;
    }
  }
}
